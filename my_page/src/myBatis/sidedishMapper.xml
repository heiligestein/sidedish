<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="myBatis/BdsMapper.xml">
		<!-- 신상품 조회 SQL문 -->
	  <select id="newpdtview" resultType="pdtDTO" parameterType="String">
	    SELECT * FROM 
	    new_pro_view
	  </select>

		<!-- 베스트상품 조회 SQL문 -->
	  <select id="bestpdtview" resultType="pdtDTO" parameterType="String">
	    SELECT * FROM 
	    best_pro_view
	  </select>
	
	<select id="membercheck">
		SELECT mid FROM member 
		WHERE mid = ?
	</select>
	
	<select id="sessionLogin">
		 "SELECT * FROM member 
		 WHERE mid= #{mid} 
		 AND mpw= #{mpw}
	</select>
	
	<insert id="memberinsert" >
		INSERT INTO member (mid,mpw,mname,mphone,mpost,maddr,mbirth,memail,msex)
		VALUES (#{mid},
				#{mpw},
				#{mname},
				#{mphone},
				#{mpost},
				#{maddr},
				#{mbirth},
				#{memail},
				#{msex})
	</insert>
	
	<update id="studentupdate" parameterType="bDto">
		UPDATE BDSTUDENT SET 
		NAME = #{name},
		AGE = #{age}, 
		MAJOR= #{major},
		PHONE = #{phone}
		WHERE id = #{id}
	</update>
	
</mapper>